
@model IEnumerable<ShahbazWebsite_MVCPlatform.Models.Payment>

    @{
    ViewData["Title"] = "Reports - Payments";

    }


    <br />

    <div style="color:rgb(0, 102, 102)"><strong>PAYMENTS - ALL RECORDS </strong></div>

    <!--Line, yellow colored-->
    <div style="width: 825px; height: 5px; border-bottom: 4px solid rgb(255, 233, 26); position: absolute"></div>

    <br />
    <br />


    <table style="width: 100%; height: 122px; border: 2px solid white">
        <thead>
            <tr style="background-color:rgb(0, 102, 102)">
                <th style="color:white; border: 2px solid white">
                    <strong>@Html.DisplayNameFor(model => model.PaymentId)</strong>
                </th>
                <th style="color:white; border: 2px solid white">
                    <strong>@Html.DisplayNameFor(model => model.TypeOfPayment)</strong>
                </th>
                <th style="color:white; border: 2px solid white">
                    <strong>@Html.DisplayNameFor(model => model.AmountPaid)</strong>
                </th>
                <th style="color:white; border: 2px solid white">
                    <strong>@Html.DisplayNameFor(model => model.User.UserId)</strong>
                </th>
                <th style="color:white; border: 2px solid white">
                    <strong>@Html.DisplayNameFor(model => model.User.FirstName)</strong>
                </th>
                <th style="color:white; border: 2px solid white">
                    <strong>@Html.DisplayNameFor(model => model.User.LastName)</strong>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr style="background-color: rgb(229,234,238)">
                <td style="border: 2px solid white">
                    @Html.DisplayFor(modelItem => item.PaymentId)
                </td>
                <td style="border: 2px solid white">
                    @Html.DisplayFor(modelItem => item.TypeOfPayment)
                </td>
                <td style="border: 2px solid white">
                    @Html.DisplayFor(modelItem => item.AmountPaid)
                </td>
                <td style="border: 2px solid white">
                    @Html.DisplayFor(modelItem => item.User.UserId)
                </td>
                <td style="border: 2px solid white">
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td style="border: 2px solid white">
                    @Html.DisplayFor(modelItem => item.User.LastName)
                </td>
            </tr>
}
        </tbody>
    </table>



