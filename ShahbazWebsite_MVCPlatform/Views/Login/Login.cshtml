
@model ShahbazWebsite_MVCPlatform.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}


@{
    //Not using any Layout
    Layout = "_Layout_Login";
}

<br />
<br />
<form asp-action="LoginPerformed" asp-controller="Login" class="form-group">
    <label asp-for="Username"></label>
    <input asp-for="Username" placeholder="Username goes here" />
    <span asp-validation-for="Username" class="text-danger"></span>
    <br />
    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Password goes here" />
    <span asp-validation-for="Password" class="text-danger"></span>
    <br />
    <input type="submit" value="login" />
</form>

