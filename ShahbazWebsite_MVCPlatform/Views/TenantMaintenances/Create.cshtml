
@model ShahbazWebsite_MVCPlatform.Models.Maintenance


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_TenantLayout.cshtml";
}

<h2>Create</h2>

<h4>Maintenance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" value="@ViewData["UserId"]" readonly="readonly">
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                (Repair / Cleaning / Etc.)
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceDetail" class="control-label"></label>
                (Please keep under 25 chars for now, or else deal with Errors page)
                <input asp-for="MaintenanceDetail" class="form-control" />
                <span asp-validation-for="MaintenanceDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DollarAmount" class="control-label"></label>
                <input asp-for="DollarAmount" class="form-control" readonly="readonly"/>
                <span asp-validation-for="DollarAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

